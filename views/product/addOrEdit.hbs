<h3>{{viewTitle}}</h3>

<form action="/product/add" method="POST" autocomplete="off">
    <input type="hidden" name="id" value="{{data._id}}">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" name="name" value="{{data.name}}" class="form-control" placeholder="">
    </div>
    <div class="form-group">
        <label for="">Price</label>
        <input type="text" name="price" value="{{data.price}}" class="form-control" placeholder="">
    </div>
    <div class="form-group">
        <label for="">So luong</label>
        <input type="text" name="soluong" value="{{data.soluong}}" class="form-control" placeholder="">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a href="/product/list" class="btn btn-primary">View products</a>
    </div>
</form>